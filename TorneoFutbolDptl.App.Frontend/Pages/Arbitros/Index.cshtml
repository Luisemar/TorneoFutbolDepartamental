@page
@model TorneoFutbolDptl.App.Frontend.Pages.Arbitros.IndexModel
@{
}
<h1> Listado de Árbitros 🙅</h1>
<br>
<a class="btn btn-primary" asp-page="./Create">Crear Arbitro</a>
<p></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Documento</th>
            <th scope="col">Numero de telefono</th>
            <th scope="col">Colegio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var arbitro in Model.arbitros)
        {
            <tr>
                <td>@arbitro.Nombre</td>
                <td>@arbitro.Documento</td>
                <td>@arbitro.Telefono</td>
                <td>@arbitro.Colegio</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@arbitro.Id">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@arbitro.Id">Editar</a>


                </td>
            </tr>
        }
    </tbody>
</table>
