@page
@using TorneoFutbolDptl.App.Dominio
@model TorneoFutbolDptl.App.Frontend.Pages.Arbitros.CreateModel
@{
}
<h1>Creación de un nuevo Arbitro</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="arbitro.Nombre"></label>
        <input asp-for="arbitro.Nombre" class="form-control" placeholder="Pepe Pérez" >
        <span asp-validation-for="arbitro.Nombre" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="arbitro.Telefono"></label>
        <input asp-for="arbitro.Telefono" class="form-control"placeholder="3203189575">
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Documento"></label>
        <input asp-for="arbitro.Documento" class="form-control "placeholder="123456789">
    </div>
    <div class="form-group">
        <label asp-for="arbitro.Colegio"></label>
        <input asp-for="arbitro.Colegio" class="form-control"placeholder="ACF">
    </div> 
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
<br>
<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>