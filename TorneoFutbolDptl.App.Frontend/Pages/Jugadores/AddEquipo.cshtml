@page
@model TorneoFutbolDptl.App.Frontend.Pages.Jugadores.AddEquipoModel
@{
}
<h1>Asignar equipo</h1>
<form method="post">
    <div class="form-group">
        <label for="idJugador">Jugador</label>
        <input type="text" id="idJugador" name="idJugador" class="form-control" value="@Model.jugador.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idEquipo">Equipo</label>
        <select id="idEquipo" name="idEquipo" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>