@page
@model TorneoFutbolDptl.App.Frontend.Pages.Jugadores.IndexModel
@{
}

<form method="get" class="form-inline">
    <label for="b" class="my-1 mr-2">Buscar</label>
    <input type="text" name="b" id="b" asp-for="@Model.bActual" class="my-1 mr-sm-2">
    <button type="submit" class="btn btn-primary my-1">Buscar</button>
</form>
<h1> Lista de Jugadores</h1>
<br>
<a class="btn btn-primary" asp-page="./Create">Crear Jugador</a>
<p></p>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Número</th>
            <th scope="col">Equipo</th>
            <th scope="col">Posición</th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <td>@jugador.Nombre</td>
                <td>@jugador.Numero</td>
                @if (jugador.Equipo == null)
                {
                    <td>Sin asignar</td>
                }
                else
                {
                    <td>@jugador.Equipo.Nombre</td>
                } 
                @if (jugador.Posicion == null)
                {
                    <td>Sin asignar</td>
                }
                else
                {
                <td>@jugador.Posicion.Nombre</td>
                }                               

                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@jugador.Id">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@jugador.Id">Editar</a>
                    <a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@jugador.Id">Eliminar</a>


                </td>
            </tr>
        }
        
    </tbody>
</table>