@page
@model TorneoFutbolDptl.App.Frontend.Pages.Jugadores.DetailsModel
@{
}
<h1>Detalles del Jugador</h1>
<table class="table table-striped">
    <tr>
        <th scope="col">Nombre</th>
        <td>@Model.jugador.Nombre</td>
    </tr>
    <tr>
        <th scope="col">Numero</th>
        <td>@Model.jugador.Numero</td>
    </tr>
    <tr>
        <th scope="col">Equipo</th>
        @if (Model.jugador.Equipo == null)
        {
            <th>
                <a class="btn btn-primary" asp-page="./AddEquipo" asp-route-id="@Model.jugador.Id">Asignar Equipo</a>
            </th>
        }
        else
        {
            <td>@Model.jugador.Equipo.Nombre</td>
        }
    </tr>
    <tr>
        <th scope="col">Posicion</th>
        @if (Model.jugador.Posicion == null)
        {
            <th>
                <a class="btn btn-primary" asp-page="./AddPosicion" asp-route-id="@Model.jugador.Id">Asignar Posición</a>
            </th>
        }
        else
        {
            <td>@Model.jugador.Posicion</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.jugador.Id">Editar</a>
</table>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>