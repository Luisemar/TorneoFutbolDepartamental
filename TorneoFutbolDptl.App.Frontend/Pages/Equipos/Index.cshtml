@page
@model TorneoFutbolDptl.App.Frontend.Pages.Equipos.IndexModel
@{
}
<form method="get" class="form-inline">
    <label for="b" class="my-1 mr-2">Buscar</label>
    <input type="text" name="b" id="b" asp-for="@Model.bActual" class="my-1 mr-sm-2">
    <button type="submit" class="btn btn-primary my-1">Buscar</button>
</form>
<h1> Lista de Equipos ⛹⛹⛹</h1>
<br>
<a class="btn btn-primary" asp-page="./Create">Crear Equipo</a>
<p></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Municipio</th>
            <th scope="col">Director Técnico</th>
            <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model.equipos)
        {
            <tr>
                <td>@equipo.Nombre</td>
                <td>@equipo.Municipio</td>
                <td>@equipo.DirectorTecnico</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@equipo.Id">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@equipo.Id">Editar</a>
                    <a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@equipo.Id">Eliminar</a>


                </td>
            </tr>
        }
    </tbody>
</table>