@page
@model TorneoFutbolDptl.App.Frontend.Pages.Equipos.IndexModel
@{
}

<h1> Lista de Equipos</h1>
<br>
<a class="btn btn-primary" asp-page="./Create">Crear Equipo</a>
<p></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Municipio</th>
            <th scope="col">Director Director Tecnico</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model.equipos)
        {
            <tr>
                <td>@jugador.Nombre</td>
                <td>@jugador.Municipio</td>
                <td>@jugador.DirectorTecnico</td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@equipo.Id">Detalles</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@equipo.Id">Editar</a>
                    <a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@equipo.Id">Eliminar</a>


                </td>
            </tr>
        }
    </tbody>
</table>