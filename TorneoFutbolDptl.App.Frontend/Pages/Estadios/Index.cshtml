@page
@model TorneoFutbolDptl.App.Frontend.Pages.Estadios.IndexModel
@{
}
<h1> Listado de Estadios 🏟</h1>
<a class="btn btn-primary" asp-page="./Create">Crear Estadio</a>
<p></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Acciones</th>
            <th scope="col">Edicion</th> 
            <th scope="col">Eliminar</th>                         
        </tr>
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadios)
        {
            <tr>
                <td>@estadio.Nombre</td>
                <td>@estadio.Direccion</td>
                <td><a class="btn btn-secondary" asp-page="./Details" asp-route-id="@estadio.Id"> Detalle </a></td>                
                <td><a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@estadio.Id"> Editar </a></td>
                <td><a class="btn btn-secondary" asp-page="./Delete" asp-route-id="@estadio.Id"> Eliminar </a></td>                                  
            </tr>
        }
    </tbody>
</table>
