@page
@model TorneoFutbolDptl.App.Frontend.Pages.Partidos.AddEquipoLocalModel
@{
}

<h1>Asignar Equipo Local</h1>
<form method="post">
    <div class="form-group">
        <label for="idPartido">Partido</label>
        <input type="text" id="idPartido" name="idPartido" class="form-control" value="@Model.partido.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idEquipo">Equipo Local</label>
        <select id="idEquipo" name="idEquipo" class="form-control">
            @foreach (var equipo in Model.equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>

