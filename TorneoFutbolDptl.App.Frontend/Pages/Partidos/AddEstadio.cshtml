@page
@model TorneoFutbolDptl.App.Frontend.Pages.Partidos.AddEstadioModel
@{
}

<h1>Asignar Estadio Local</h1>
<form method="post">
    <div class="form-group">
        <label for="idPartido">Partido</label>
        <input type="text" id="idPartido" name="idPartido" class="form-control" value="@Model.partido.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idEstadio">Estadio Local</label>
        <select id="idEstadio" name="idEstadio" class="form-control">
            @foreach (var estadio in Model.estadios)
            {
                <option value="@estadio.Id">@estadio.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>