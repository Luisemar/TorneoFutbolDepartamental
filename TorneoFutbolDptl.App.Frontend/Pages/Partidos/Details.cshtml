@page
@model TorneoFutbolDptl.App.Frontend.Pages.Partidos.DetailsModel
@{
}
<h1>Detalles del Partido</h1>
<table class="table table-striped">
    <tr>
        <th scope="col">Id</th>
        <td>@Model.partido.Id</td>
    </tr>
    <tr>
        <th scope="col">Equipo local</th>
        @if (Model.partido.EquipoLocal == 0)
        {
            <th>
                <a class="btn btn-primary" asp-page="./AddEquipoLocal" asp-route-id="@Model.partido.Id">Asignar Equipo
                    Local</a>
            </th>
        }
        else
        {
            <td>@Model.partido.EquipoLocal</td>
        }
    </tr>
    <tr>
        <th scope="col">Equipo visitante</th>
        @if (Model.partido.EquipoVisita == 0)
        {
            <th>
                <a class="btn btn-primary" asp-page="./AddEquipoVisita" asp-route-id="@Model.partido.Id">Asignar Equipo
                    Visitante</a>
            </th>
        }
        else
        {
            <td>@Model.partido.EquipoVisita</td>
        }
    </tr>
    <tr>
        <th scope="col">Goles equipo local</th>


        <td>@Model.partido.EquipoLocalMarca
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <a class="btn btn-primary" asp-page="./AddEquipoLocalMarca"
                asp-route-id="@Model.partido.Id">Agregar Gol</a></td>
    </tr>
    <tr>
        <th scope="col">Goles equipo visitante</th>
        <td>@Model.partido.EquipoVisitaMarca
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <a class="btn btn-primary"
                asp-page="./AddEquipoVisitaMarca" asp-route-id="@Model.partido.Id">Agregar Gol</a></td>
        </td>
    </tr>
    <tr>
        <th scope="col">Fecha/Hora</th>
        <td>@Model.partido.FechaHora</td>
    </tr>
    <tr>
        <th scope="col">Árbitro</th>
        @if (Model.partido.Arbitro == null)
        {
            <th>
                <a class="btn btn-primary" asp-page="./AddArbitro" asp-route-id="@Model.partido.Id">Asignar Árbitro</a>
            </th>
        }
        else
        {
            <td>@Model.partido.Arbitro.Nombre</td>
        }
        
    </tr>
    <tr>
        <th scope="col">Estadio</th>
         @if (Model.partido.Estadio == null)
        {
            <th>
                <a class="btn btn-primary" asp-page="./AddEstadio" asp-route-id="@Model.partido.Id">Asignar Estadio</a>
            </th>
        }
        else
        {
            <td>@Model.partido.Estadio</td>
        }
        
    </tr>
    <tr>
        <th scope="col">Novedades</th>
        <td>@Model.partido.Novedad</td>
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.partido.Id">Editar</a>
</table>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>