@page
@model TorneoFutbolDptl.App.Frontend.Pages.Partidos.AddArbitroModel
@{
}
<h1>Asignar Árbitro</h1>
<form method="post">
    <div class="form-group">
        <label for="idPartido">Partido</label>
        <input type="text" id="idPartido" name="idPartido" class="form-control" value="@Model.partido.Id" readonly>
    </div>
    <div class="form-group">
        <label for="idArbitro">Árbitro</label>
        <select id="idArbitro" name="idArbitro" class="form-control">
            @foreach (var arbitro in Model.arbitros)
            {
                <option value="@arbitro.Id">@arbitro.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>