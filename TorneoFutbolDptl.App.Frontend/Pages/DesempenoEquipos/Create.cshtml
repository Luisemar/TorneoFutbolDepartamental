@page
@using TorneoFutbolDptl.App.Dominio
@model TorneoFutbolDptl.App.Frontend.Pages.DesempenoEquipos.CreateModel
@{
}
<h1>Nuevo Desempeno</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="desempenoEquipo.Id"></label>
        <input asp-for="desempenoEquipo.Id" class="form-control" placeholder="Mónaco" readonly>
        <span asp-validation-for="desempenoEquipo.Id" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="desempenoEquipo.PartidosJugados"></label>
        <input asp-for="desempenoEquipo.PartidosJugados" class="form-control"placeholder="1">
    </div>
    <div class="form-group">
        <label asp-for="desempenoEquipo.PartidosPerdidos"></label>
        <input asp-for="desempenoEquipo.PartidosPerdidos" class="form-control "placeholder="Atlético Nacional">
    </div>
    <div class="form-group">
        <label asp-for="desempenoEquipo.PartidosEmpatados"></label>
        <input asp-for="desempenoEquipo.PartidosEmpatados" class="form-control"placeholder="Arquero">
    </div>
        <div class="form-group">
        <label asp-for="desempenoEquipo.GolesAFavor"></label>
        <input asp-for="desempenoEquipo.GolesAFavor" class="form-control"placeholder="1">
    </div>
        <div class="form-group">
        <label asp-for="desempenoEquipo.GolesEnContra"></label>
        <input asp-for="desempenoEquipo.GolesEnContra" class="form-control"placeholder="1">
    </div>
        <div class="form-group">
        <label asp-for="desempenoEquipo.PuntosAcumulados"></label>
        <input asp-for="desempenoEquipo.PuntosAcumulados" class="form-control"placeholder="1">
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
<br>
<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>